/**
 * Description of CidadeDAO
 *
 * @author Lucas
 */
class CidadeDAO extends DAO{
    
    
    public function __construct() {
        parent::__construct();
    }
    
    public function insert($dados)
    {
        $query = "insert into Cidades(nome)";
        $valuesInsert = "values ( '{$dados->nome}')";        
        
        return $this->executeQueryNoResult($query . " " . $valuesInsert);
        
        
    }
    
    public function update($dados)
    {
        $query = "update cidades set nome = '{$dados->nome}' where id = {$dados->id}";
        
        return $this->executeQueryNoResult($query);
    }
    
    public function listarCidades()
    {
        return $this->executerQueryResult("select * from cidades");
    }
    
    public function buscarCidade($idCidade)
    {
        $params = array("tipos" => "".$this->typeValueBD($idCidade));
        $params[] = $idCidade;
        return $this->executerQueryResult("select * from cidades where id = ? ",$params);
        
    }
    
}
